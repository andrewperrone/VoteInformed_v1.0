<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageAvatar"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginTop="25dp"
            android:elevation="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/obamapfp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/CircleImage" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/panel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="0dp"
            app:cardBackgroundColor="#5A657281"
            app:cardCornerRadius="20dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/panelContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingTop="100dp"
                android:paddingEnd="20dp"
                android:paddingBottom="24dp">

                <TextView
                    android:id="@+id/textName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/urbanistmedium"
                    android:text="Barack Obama"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@+id/textParty"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/textParty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/urbanistmedium"
                    android:text="Democratic Party"
                    android:textColor="#D6DAFF"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textName" />

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/tabs"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textParty"
                    app:selectionRequired="true"
                    app:singleSelection="true">

                    <View
                        android:id="@+id/sliderBubble"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:background="@drawable/rounded_bubble"
                        android:translationX="0dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/tabAbout"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="About"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        app:backgroundTint="#3A4475"
                        app:strokeColor="#8591C7"
                        app:strokeWidth="2dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/tabPolicy"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Policy"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        app:backgroundTint="#3A4475"
                        app:strokeColor="#8591C7"
                        app:strokeWidth="2dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/tabContact"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Contact"
                        android:textAllCaps="false"
                        android:textColor="#FFFFFF"
                        app:backgroundTint="#3A4475"
                        app:strokeColor="#8591C7"
                        app:strokeWidth="2dp" />

                </com.google.android.material.button.MaterialButtonToggleGroup>

                <!-- ABOUT SECTION -->
                <LinearLayout
                    android:id="@+id/sectionAbout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tabs">

                    <TextView
                        android:id="@+id/textBio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/urbanistmedium"
                        android:lineHeight="22sp"
                        android:text="Barack Obama served as the 44th President of the United States from 2009–2017. Before the presidency, he represented Illinois as a U.S. Senator (2005–2008) and State Senator (1997–2004). Born in Hawaii, he studied Political Science at Columbia University and earned his law degree at Harvard, where he was president of the Harvard Law Review.\n\nObama is known for his background as a community organizer in Chicago, his focus on healthcare reform, economic recovery, and foreign diplomacy. Since leaving office, he has remained active through the Obama Foundation, focusing on civic engagement, leadership, and public service."
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- POLICY SECTION -->
                <LinearLayout
                    android:id="@+id/sectionPolicy"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tabs">

                    <TextView
                        android:id="@+id/policyPlaceholder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/urbanistmedium"
                        android:text="Healthcare: Signed the Affordable Care Act to expand coverage and protect patients with pre-existing conditions.\n\nEconomy: Passed stimulus measures to address the 2008 financial crisis and promoted middle-class tax cuts.\n\nForeign Affairs: Advocated diplomacy, ordered the mission that killed Osama bin Laden, and opened relations with Cuba.\n\nEnvironment: Supported renewable energy and signed the Paris Climate Agreement.\n\nSocial Issues: Advanced LGBTQ+ rights and strengthened protections for women’s rights."
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- CONTACT SECTION -->
                <LinearLayout
                    android:id="@+id/sectionContact"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tabs">

                    <TextView
                        android:id="@+id/contactPlaceholder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/urbanistmedium"
                        android:text="Official Website: barackobama.com\nObama Foundation: obama.org\nEmail: info@obama.org\n\nMailing Address:\nThe Obama Foundation\n5235 S. Harper Court, Suite 1140\nChicago, IL 60615\n\nTwitter: @BarackObama\nFacebook: facebook.com/barackobama\nInstagram: @barackobama"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />
                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/sectionContact" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
