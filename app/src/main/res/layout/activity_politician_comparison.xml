<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- MAIN CONTENT -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_background">

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:background="#F2F4F4"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent">


            <ImageButton
                android:id="@+id/btnLeftMenu"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/menus"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_close_clear_cancel"
                app:tint="@color/text_primary" />
        </LinearLayout>

    <TextView
        android:id="@+id/titleComparison"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/urbanistmedium"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:text="Comparison Tool"
        android:textColor="@color/app_secondary_teal"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar" />

    <LinearLayout
        android:id="@+id/tabButtons"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:weightSum="3"
        app:layout_constraintTop_toBottomOf="@id/titleComparison">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tabOverview"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Overview"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            app:backgroundTint="#3ab0d8"
            app:cornerRadius="12dp"
            app:strokeColor="#8591C7"
            app:strokeWidth="2dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tabIssues"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Issues"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            app:backgroundTint="#3ab0d8"
            app:cornerRadius="12dp"
            app:strokeColor="#8591C7"
            app:strokeWidth="2dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tabContact"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Contact"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            app:backgroundTint="#3ab0d8"
            app:cornerRadius="12dp"
            app:strokeColor="#8591C7"
            app:strokeWidth="2dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingHorizontal="0dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabButtons">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="4dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardLeft"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/mint"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:paddingTop="12dp"
                            android:paddingEnd="12dp"
                            android:paddingBottom="4dp">

                            <ImageButton
                                android:id="@+id/btnSwapLeft"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginStart="4dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:contentDescription="Swap"
                                android:src="@android:drawable/ic_popup_sync"
                                app:tint="@android:color/white" />

                            <ImageButton
                                android:id="@+id/btnRemoveLeft"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:contentDescription="Remove"
                                android:src="@android:drawable/ic_menu_close_clear_cancel"
                                app:tint="@android:color/white" />
                        </LinearLayout>

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/imageLeft"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:background="@android:color/transparent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/user"
                            android:tint="@android:color/white"
                            app:shapeAppearanceOverlay="@style/CircleImage"
                            app:strokeColor="@android:color/white"
                            app:strokeWidth="1dp" />

                        <TextView
                            android:id="@+id/nameLeft"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/urbanistmedium"
                            android:shadowColor="#000000"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="2"
                            android:text="Empty Slot"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/partyLeft"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/urbanistmedium"
                            android:shadowColor="#000000"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="2"
                            android:text="Select a candidate"
                            android:textColor="#E3F2FD"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:layout_marginBottom="16dp"
                            android:orientation="vertical"
                            android:paddingHorizontal="8dp">

                            <include
                                android:id="@+id/metricLeft1"
                                layout="@layout/item_metric_row" />

                            <include
                                android:id="@+id/metricLeft2"
                                layout="@layout/item_metric_row" />

                            <include
                                android:id="@+id/metricLeft3"
                                layout="@layout/item_metric_row" />

                            <include
                                android:id="@+id/metricLeft4"
                                layout="@layout/item_metric_row" />

                            <include
                                android:id="@+id/metricLeft5"
                                layout="@layout/item_metric_row" />

                            <include
                                android:id="@+id/metricLeft6"
                                layout="@layout/item_metric_row" />

                            <include
                                android:id="@+id/metricLeft7"
                                layout="@layout/item_metric_row" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardRight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/orangefrosty"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:paddingTop="12dp"
                            android:paddingEnd="12dp"
                            android:paddingBottom="4dp">

                            <ImageButton
                                android:id="@+id/btnSwapRight"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginStart="4dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:contentDescription="Swap"
                                android:src="@android:drawable/ic_popup_sync"
                                app:tint="@android:color/white" />

                            <ImageButton
                                android:id="@+id/btnRemoveRight"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:contentDescription="Remove"
                                android:src="@android:drawable/ic_menu_close_clear_cancel"
                                app:tint="@android:color/white" />
                        </LinearLayout>

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/imageRight"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="8dp"
                            android:background="@android:color/transparent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/user"
                            android:tint="@android:color/white"
                            app:shapeAppearanceOverlay="@style/CircleImage"
                            app:strokeColor="@android:color/white"
                            app:strokeWidth="1dp" />

                        <TextView
                            android:id="@+id/nameRight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/urbanistmedium"
                            android:shadowColor="#000000"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="2"
                            android:text="Empty Slot"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/partyRight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/urbanistmedium"
                            android:shadowColor="#000000"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="2"
                            android:text="Select a candidate"
                            android:textColor="#E3F2FD"
                            android:textSize="12sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="24dp"
                            android:layout_marginBottom="16dp"
                            android:orientation="vertical"
                            android:paddingHorizontal="8dp">

                            <include
                                android:id="@+id/metricRight1"
                                layout="@layout/item_metric_row" />

                            <include
                                android:id="@+id/metricRight2"
                                layout="@layout/item_metric_row" />

                            <include
                                android:id="@+id/metricRight3"
                                layout="@layout/item_metric_row" />

                            <include
                                android:id="@+id/metricRight4"
                                layout="@layout/item_metric_row" />

                            <include
                                android:id="@+id/metricRight5"
                                layout="@layout/item_metric_row" />

                            <include
                                android:id="@+id/metricRight6"
                                layout="@layout/item_metric_row" />

                            <include
                                android:id="@+id/metricRight7"
                                layout="@layout/item_metric_row" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- DRAWER MENU -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white"
        app:menu="@menu/activity_main_drawer"
        app:headerLayout="@layout/nav_header_main" />

</androidx.drawerlayout.widget.DrawerLayout>
