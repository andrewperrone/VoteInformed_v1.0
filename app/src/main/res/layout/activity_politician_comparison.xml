<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:background="@color/app_top_bar_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="@color/text_primary" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/titleComparison"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/urbanistmedium"
        android:text="Comparison Tool"
        android:textColor="@color/app_secondary_teal"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar" />

    <!-- Scroll content with two cards -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingHorizontal="0dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleComparison">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- LEFT CARD: flush to left -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardLeft"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/app_primary_blue"
                    android:orientation="vertical"
                    android:paddingBottom="24dp">

                    <!-- Left image -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imageLeft"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="24dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/obamapfp"
                        app:shapeAppearanceOverlay="@style/CircleImage"
                        app:strokeColor="@android:color/white"
                        app:strokeWidth="3dp" />

                    <!-- Left name -->
                    <TextView
                        android:id="@+id/nameLeft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/urbanistmedium"
                        android:text="Barack Obama"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Left party -->
                    <TextView
                        android:id="@+id/partyLeft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/urbanistmedium"
                        android:text="Democratic Party"
                        android:textColor="#E3F2FD"
                        android:textSize="12sp" />

                    <!-- Left metrics -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:orientation="vertical"
                        android:paddingHorizontal="16dp">

                        <include
                            android:id="@+id/metricLeft1"
                            layout="@layout/item_comparison_metric"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp" />

                        <include
                            android:id="@+id/metricLeft2"
                            layout="@layout/item_comparison_metric"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp" />

                        <include
                            android:id="@+id/metricLeft3"
                            layout="@layout/item_comparison_metric"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp" />

                        <include
                            android:id="@+id/metricLeft4"
                            layout="@layout/item_comparison_metric"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp" />

                        <include
                            android:id="@+id/metricLeft5"
                            layout="@layout/item_comparison_metric"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp" />

                        <include
                            android:id="@+id/metricLeft6"
                            layout="@layout/item_comparison_metric"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp" />

                        <include
                            android:id="@+id/metricLeft7"
                            layout="@layout/item_comparison_metric"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <!-- Left actions -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <!-- Swap -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingHorizontal="8dp">

                            <ImageButton
                                android:id="@+id/btnSwapLeft"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:contentDescription="Swap"
                                android:src="@android:drawable/ic_popup_sync"
                                app:tint="@android:color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/urbanistmedium"
                                android:text="Swap"
                                android:textColor="@android:color/white"
                                android:textSize="10sp" />
                        </LinearLayout>

                        <!-- Remove -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingHorizontal="8dp">

                            <ImageButton
                                android:id="@+id/btnRemoveLeft"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:contentDescription="Remove"
                                android:src="@android:drawable/ic_menu_close_clear_cancel"
                                app:tint="@android:color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/urbanistmedium"
                                android:text="Remove"
                                android:textColor="@android:color/white"
                                android:textSize="10sp" />
                        </LinearLayout>

                        <!-- Save -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingHorizontal="8dp">

                            <LinearLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/bookmark"
                                    app:tint="@android:color/white" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/urbanistmedium"
                                android:text="Save"
                                android:textColor="@android:color/white"
                                android:textSize="10sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- RIGHT CARD: flush to right -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardRight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#C62828"
                    android:orientation="vertical"
                    android:paddingBottom="24dp">

                    <!-- Right image -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imageRight"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="24dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/obamapfp"
                        app:shapeAppearanceOverlay="@style/CircleImage"
                        app:strokeColor="@android:color/white"
                        app:strokeWidth="3dp" />

                    <!-- Right name -->
                    <TextView
                        android:id="@+id/nameRight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/urbanistmedium"
                        android:text="Donald Trump"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Right party -->
                    <TextView
                        android:id="@+id/partyRight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/urbanistmedium"
                        android:text="Republican Party"
                        android:textColor="#FFCDD2"
                        android:textSize="12sp" />

                    <!-- Right metrics -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:orientation="vertical"
                        android:paddingHorizontal="16dp">

                        <include
                            android:id="@+id/metricRight1"
                            layout="@layout/item_comparison_metric"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp" />

                        <include
                            android:id="@+id/metricRight2"
                            layout="@layout/item_comparison_metric"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp" />

                        <include
                            android:id="@+id/metricRight3"
                            layout="@layout/item_comparison_metric"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp" />

                        <include
                            android:id="@+id/metricRight4"
                            layout="@layout/item_comparison_metric"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp" />

                        <include
                            android:id="@+id/metricRight5"
                            layout="@layout/item_comparison_metric"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp" />

                        <include
                            android:id="@+id/metricRight6"
                            layout="@layout/item_comparison_metric"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp" />

                        <include
                            android:id="@+id/metricRight7"
                            layout="@layout/item_comparison_metric"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <!-- Right actions -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <!-- Swap -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingHorizontal="8dp">

                            <ImageButton
                                android:id="@+id/btnSwapRight"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:contentDescription="Swap"
                                android:src="@android:drawable/ic_popup_sync"
                                app:tint="@android:color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/urbanistmedium"
                                android:text="Swap"
                                android:textColor="@android:color/white"
                                android:textSize="10sp" />
                        </LinearLayout>

                        <!-- Remove -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingHorizontal="8dp">

                            <ImageButton
                                android:id="@+id/btnRemoveRight"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:contentDescription="Remove"
                                android:src="@android:drawable/ic_menu_close_clear_cancel"
                                app:tint="@android:color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/urbanistmedium"
                                android:text="Remove"
                                android:textColor="@android:color/white"
                                android:textSize="10sp" />
                        </LinearLayout>

                        <!-- Save -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingHorizontal="8dp">

                            <LinearLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="?attr/selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/bookmark"
                                    app:tint="@android:color/white" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/urbanistmedium"
                                android:text="Save"
                                android:textColor="@android:color/white"
                                android:textSize="10sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
