<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background">

    <!-- TOP BAR -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/btnBackPolitician"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:tint="@color/text_primary" />
    </LinearLayout>


    <!-- COMPARE BUTTON -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCompare"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/compare"
        app:backgroundTint="#ADC4CD"
        app:tint="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintEnd_toEndOf="parent" />


    <!-- PROFILE + TABS + CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/fabCompare"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="32dp">

            <!-- Profile Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgPoliticianProfile"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/user"
                    app:shapeAppearanceOverlay="@style/CircleImage"
                    app:strokeColor="@color/app_primary_blue"
                    app:strokeWidth="2dp" />

                <TextView
                    android:id="@+id/tvPoliticianName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/urbanistmedium"
                    android:text="Loading..."
                    android:textColor="@color/text_primary"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvPoliticianParty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/urbanistmedium"
                    android:text="Loading..."
                    android:textColor="#78909C"
                    android:textSize="16sp" />
            </LinearLayout>


            <!-- Tabs -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_box"
                android:orientation="horizontal"
                android:weightSum="3">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/tabAbout"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="About"
                    android:textAllCaps="false"
                    android:textColor="@color/text_primary"
                    app:cornerRadius="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/tabPolicy"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Policy"
                    android:textAllCaps="false"
                    android:textColor="@color/text_primary"
                    app:cornerRadius="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/tabContact"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Contact"
                    android:textAllCaps="false"
                    android:textColor="@color/text_primary"
                    app:cornerRadius="8dp" />
            </LinearLayout>


            <!-- Content Area -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp">

                <!-- About Section -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/sectionAbout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:cardBackgroundColor="#F5F5F5"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:id="@+id/tvAboutContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="24dp"
                        android:fontFamily="@font/urbanistmedium"
                        android:text="Biography loading..."
                        android:lineSpacingExtra="6dp"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp" />
                </androidx.cardview.widget.CardView>


                <!-- Policy Section -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/sectionPolicy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:cardBackgroundColor="#F5F5F5"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:id="@+id/tvPolicyContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="24dp"
                        android:fontFamily="@font/urbanistmedium"
                        android:text="Policy details not available in this dataset."
                        android:lineSpacingExtra="6dp"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp" />
                </androidx.cardview.widget.CardView>


                <!-- Contact Section -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/sectionContact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:cardBackgroundColor="#F5F5F5"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="OFFICE LOCATION"
                            android:textSize="12sp"
                            android:fontFamily="@font/urbanistbold"
                            android:textColor="#78909C"/>

                        <TextView
                            android:id="@+id/tvContactLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="16dp"
                            android:text="Loading..."
                            android:fontFamily="@font/urbanistmedium"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CONTACT DETAILS"
                            android:textSize="12sp"
                            android:fontFamily="@font/urbanistbold"
                            android:textColor="#78909C"/>

                        <TextView
                            android:id="@+id/tvContactDetails"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Loading..."
                            android:autoLink="all"
                            android:fontFamily="@font/urbanistmedium"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </FrameLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
